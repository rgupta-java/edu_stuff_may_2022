package com.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;

import com.demo.Car;
import com.demo.Metro;
import com.demo.Vehical;

@Configuration
//@ComponentScan(basePackages = "com.demo")
public class AppConfig {

	/*
	 * <bean id="passanger" class="com.demo.Passanger" autowire="byType" >
		<property name="name" value="raja"/>
	</bean>
	<bean id="vehical1" class="com.demo.Metro" />
	<bean id="vehical2" class="com.demo.Car" primary="true"/>
	 */
	
	

	@Bean(name = "passanger")
	public Vehical getPassanger() {
		System.out.println("getCar is called");
		Vehical vehical=new Car();
		return vehical;
	}
	
	
	@Bean(name = "vehical1")
	public Vehical getCar() {
		System.out.println("getCar is called");
		Vehical vehical=new Car();
		return vehical;
	}
	
	@Bean(name = "vehical1")
	public Vehical getMetro() {
		System.out.println("getMetro is called");
		Vehical vehical=new Metro();
		return vehical;
	}
	
}







